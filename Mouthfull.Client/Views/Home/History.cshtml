@{
}
@model List<Recipe>;



<row class="card-group">

    @foreach(var recipe in Model)
    {
        <div class="col-sm">
            <div class="card">
                <img src="@recipe.image" class="card-img-top" alt="...">
                <div class="card-body">
                    <a href=@Url.Action("RecipeSummary","Home", new { id = recipe.id }) class="card-title">@recipe.title</a>
                </div>
            </div>
        </div>
    }
</row>